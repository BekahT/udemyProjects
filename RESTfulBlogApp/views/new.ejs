<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title:</label>
            <input type="text" name="blog[title]" placeholder="New post title" required>
        </div>
        <div class="field">
            <label>Image:</label>
            <input type="text" name="blog[image]" placeholder="Image URL" required>
        </div>
        <div class="field">
            <label>Post Content:</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui primary button" type="submit">
    </form>
</div>

<% include ./partials/footer %>