<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Post: <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title:</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label>Image:</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" required>
        </div>
        <div class="field">
            <label>Post Content:</label>
            <textarea name="blog[body]" required><%=blog.body%></textarea>
        </div>
        <input class="ui primary button" type="submit">
        <form action="/blogs/<%=blog._id%>" method="GET">
            <button class="ui grey button">Cancel</button>
        </form>
    </form>
</div>

<% include ./partials/footer %>